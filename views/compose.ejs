<%- include('header'); -%>
<form class=" col-lg-6 col-10 m-auto mt-5" action="/compose" method="Post">
	<div class="mb-3 ">
	  <label class="form-label bg-secondary p-2 rounded-3 text-white">Heading</label>
	  <input type="text" class="form-control border border-1 border-secondary" name="heading" required>
	</div>
	<div class="mb-3 " >
	  <label class="form-label bg-secondary p-2 rounded-3 text-white">Article</label>
	  <textarea class="form-control border border-1 border-secondary" name="article" rows="10" required></textarea>
	</div>
	<button type="submit" class="btn btn-outline-secondary" name="submit" >Publish</button>
</form>
<%- include('footer'); -%>